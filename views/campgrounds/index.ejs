<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world.</p>
            <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-4 col-sm-6">
                <div class="card" style="margin-bottom: 15px;">
                    <a href="/campgrounds/<%= campground._id %>"><img class="card-img-top" src="<%= campground.image %>" alt="Campground image"></a>
                    <div class="card-body">
                        <h4 class="card-title campground-index-title"><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </div>
                </div>
            </div>
         <% }); %>
    </div>
</div>

<% include ../partials/footer %>